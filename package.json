{
  "name": "amp",
  "version": "0.0.7",
  "description": "Display your Apple Music presence on discord!",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc && electron . -d",
    "compile": "tsc",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist -- --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "afterSign": "scripts/notarize.js",
    "appId": "co.atiktech.AMP",
    "productName": "AMP",
    "directories": {
      "output": "build/app"
    },
    "copyright": "Copyright Â© 2020 ATIK_TECH",
    "dmg": {
      "sign": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.social-networking",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  },
  "author": {
    "name": "ATIK_TECH",
    "email": "mail@atiktech.co"
  },
  "license": "ISC",
  "dependencies": {
    "@sentry/electron": "^2.0.1",
    "applescript": "^1.0.0",
    "discord-rpc": "^3.1.0",
    "dotenv": "^8.0.0",
    "electron-log": "^4.1.2",
    "electron-settings": "^4.0.2",
    "electron-updater": "^4.0.14",
    "is-online": "^8.2.1",
    "source-map-support": "^0.5.16"
  },
  "repository": {
    "url": "https://github.com/A-da-m/AppleMusicPresence"
  },
  "devDependencies": {
    "@types/discord-rpc": "^3.0.3",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
