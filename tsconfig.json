{
  "compileOnSave": true,
	"compilerOptions": {
    "jsx": "preserve",
		"target": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": [
    "./src/**/*", "public", "module.d.ts"
  ]
}